{
  "manifest_version": 3,
  "name": "Bogleheads Forum Extension",
  "version": "1.0",
  "permissions": ["storage"],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [{
    "matches": ["*://*.bogleheads.org/index.php*"],
    "js": ["content.js"],
    "css": ["styles.css"]
  }]
}
